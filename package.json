{
  "name": "heroku-cra-node",
  "version": "1.0.0",
  "description": "How to use create-react-app with a custom Node API on Heroku",
  "engines": {
    "node": "6.9.x"
  },
  "scripts": {
    "start": "node server",
    "setup-db": "concurrently \"brew install mongodb\" \"brew tap homebrew/services\" \"brew services start mongodb\" \"node createLocalTestDb.js\" \"mongod\"",
    "start-servers": "concurrently \"nodemon server\" \"cd react-ui && npm start\"",
    "test": "concurrently \"jasmine-node spec/ --color\" \"cd react-ui && ./node_modules/.bin/wdio wdio.conf.js\"",
    "test-backend": "jasmine-node spec/ --color",
    "test-frontend": "cd react-ui && ./node_modules/.bin/wdio wdio.conf.js",
    "heroku-postbuild": "cd react-ui/ && npm install --only=dev && npm install && npm run build"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "express": "^4.14.1",
    "mongoose": "^4.10.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danielemanuel/in_search_of_happiness"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "jasmine": "^2.6.0",
    "jasmine-node": "^1.14.5",
    "nodemon": "^1.11.0",
    "zombie": "^5.0.5"
  }
}
